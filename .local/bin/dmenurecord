#!/bin/sh

killrecording() {
	recpid="$(cat /tmp/recordingpid)"
	# kill with SIGTERM, allowing finishing touches.
	kill -15 "$recpid"
	rm -f /tmp/recordingpid
	rm -f /tmp/recordingicon
    pkill -RTMIN+4 dwmblocks
	# even after SIGTERM, ffmpeg may still run, so SIGKILL it.
	sleep 3
	kill -9 "$recpid"
	exit
	}

screencast() { \
	ffmpeg -y \
	-f x11grab \
	-framerate 30 \
	-s "$(xdpyinfo | awk '/dimensions/ {print $2;}')" \
	-i "$DISPLAY" \
	-f alsa -i default \
	-r 30 \
 	-c:v h264 -crf 0 -preset ultrafast -c:a aac \
	"$HOME/Videos/captures/screencast-$(date '+%y%m%d-%H%M-%S').mp4" &
    echo $! > /tmp/recordingpid
	echo "î®§" > /tmp/recordingicon
    pkill -RTMIN+4 dwmblocks
       	}

askrecording() { \
	choice=$(printf "No\\nYes" | dmenu -i -p "Record screen?") &&
	[ "$choice" = "Yes" ] && screencast
	}

asktoend() { \
	response=$(printf "No\\nYes" | dmenu -i -p "End recording?") &&
	[ "$response" = "Yes" ] && killrecording
	}

[ -f /tmp/recordingpid ] && asktoend && exit || askrecording
