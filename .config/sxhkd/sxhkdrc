super + shift + Return
    $TERMINAL

super + shift + s
	screenshot

super + ctrl + s
	fullscreenshot

super + v
    diodon

super + shift + e
    $TERMINAL -e vifmrun

super + o
    wallpapertoggle

super + ctrl + o
    randomwallpaper

super + shift + m ; {m,u,e,r,p,n}
    dmenu{mount,umount,unicode,record,power,poornitro}

shift + Print
    killrecord

super + p ; {d,z,t}
	{discord,zathura,torbrowser-launcher}

super + b
    google-chrome-stable --profile-directory=Work

super + shift + {b,n}
    firefox {_,--private-window}

super + F5
    pkill dwmblocks ; dwmblocks

{_,shift +,super +} XF86MonBrightness{Down,Up}
	brightnessctl s {1%-,10%-,0%,+1%,+10%,100%} ; pkill -RTMIN+2 dwmblocks ; brightnessnotify

XF86Audio{Prev,Next,Play,Stop}
	playerctl {previous,next,play-pause,stop} # ; pkill -RTMIN+3 dwmblocks

XF86AudioMute
    pactl set-sink-mute 3 toggle ; pkill -RTMIN+1 dwmblocks

{_,shift + ,super + }XF86Audio{Lower,Raise}Volume
    pactl set-sink-mute 3 false ; amixer -M sset Master {1%-,10%-,0%,1%+,10%+,100%} \
    ; pkill -RTMIN+1 dwmblocks ; volumenotify
